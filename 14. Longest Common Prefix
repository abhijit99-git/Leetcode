class Solution {
    public String longestCommonPrefix(String[] str) {

        if(str.length==0) return "";

        if(str.length==1) return str[0];

        String LongestCommonPrefix = "";
        int j=0; // Global variable for validation of empty prefix
        for(int i = 0; i < str.length; i++) {
            String currentString = str[i];
            if (i == 0) {
                LongestCommonPrefix = currentString; // Initialized with the first string
            } else {
                 j = 0;
                while (j < LongestCommonPrefix.length() && j < currentString.length() && 
                       LongestCommonPrefix.charAt(j) == currentString.charAt(j)) {
                    j++;
                }
                LongestCommonPrefix = LongestCommonPrefix.substring(0, j); // Updatation to prefix
            }   


        }
        if(j==0) return "";

        return LongestCommonPrefix;
    
    }
}
